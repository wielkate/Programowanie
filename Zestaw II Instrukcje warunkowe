Zestaw II

Zadanie 0.
#include <iostream>

int main() {
  int a;
  std::cin >> a;
  if (a % 2 == 0) {
	std::cout << "Parzysta" << std::endl;
  } else {
	std::cout << "Nieparzysta" << std::endl;
  }

  return 0;
}

Zadanie 1.
#include <iostream>

int main() {
  float a;
  std::cin >> a;
  if (a > 0) {
	std::cout << "Liczba dodatnia" << std::endl;
  } else if (a < 0) {
	std::cout << "Liczba ujemna" << std::endl;
  } else {
	std::cout << "Zero" << std::endl;
  }
  
  return 0;
}

Zadanie 2.
#include <iostream>

int main() {
  float a;
  std::cin >> a;
  if (a >= 90 && a <= 100) {
	std::cout << "Bardzo dobry, 5.0" << std::endl;
  } if (a >= 80 && a < 90) {
	std::cout << "Dobry plus, 4.5" << std::endl;
  } if (a >= 70 && a < 80) {
	std::cout << "Dobry, 4.0" << std::endl;
  } if (a >= 60 && a < 70) {
	std::cout << "Dostateczny plus, 3.5" << std::endl;
  } if (a >= 50 && a < 60) {
	std::cout << "Dostateczny, 3.0" << std::endl;
  } if (a < 50) {
	std::cout << "Niedostateczny, 2.0" << std::endl;
  }
  
  return 0;
}

Zadanie 3.
#include <iostream>

int main() {
  float a, b, c;
  std::cin >> a >> b >> c;
  if (b >= a && c >= b) {
	std::cout << "Porzadek niemalejacy" << std::endl;
  } else {
	std::cout << "Inny porzadek" << std::endl;
  }
  
  return 0;
}

