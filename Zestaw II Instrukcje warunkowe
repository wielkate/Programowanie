Zadanie 5.
#include <iostream>

int main() {
  float a, b, c;
  std::cin >> a >> b >> c;
  if (a + b > c && a + c > b && b + c > a) {
	std::cout << "Da sie skonstruowac trojkat" << std::endl;
  } else {
	std::cout << "Nie da sie" << std::endl;
  }

  return 0;
}

Zadanie 6.
#include <iostream>

int main() {
  int x1, y1, x2, y2, r1, r2;
  std::cout << "Podaj odpowiednio wspolrzedne x1, y1, x2, y1, y2, r1, r2" << std::endl;
  std::cin >> x1 >> y1 >> x2 >> y2 >> r1 >> r2;
  if (((x1 - x2) ^ 2) + ((y1 - y2) ^ 2) <= ((r1 + r2) ^ 2)) {
	std::cout << "Maja puste przeciecie";
  } else {
	std::cout << "Maja niepuste przeciecie";
  }

  return 0;
}

Zadanie 7.
#include <iostream>

int main() {
  float a, b, c;
  std::cin >> a >> b >> c;
  if (a <= b && a <= c) {
	std::cout << "Nqjmniejsza liczba jest : " << a << std::endl;
  } else if (b <= a && b <= c) {
	std::cout << "Nqjmniejsza liczba jest : " << b << std::endl;
  } else {
	std::cout << "Nqjmniejsza liczba jest : " << c << std::endl;
  }

  return 0;
}

Zadanie 8.

#include <iostream>

int main() {
  float a, b, c, d, x1, x2;

  std::cin >> a >> b >> c;
  d = b * b - 4 * a * c;
  if (d > 0) {
	x1 = (-b + sqrt(d)) / (2 * a);
	x2 = (-b - sqrt(d)) / (2 * a);
	std::cout << "Dwa pierwiastki rownania : " << x1 << " i " <<  x2 << std::endl;
  } else if (d == 0) {
	std::cout << "Jeden pierwiastek rownania : " << -b / (2 * a) << std::endl;
  } else {
	std::cout << "Brak rozwiazania" << std::endl;
  }

  return 0;
}

Zadanie 9.
#include <iostream>

int main() {
  float t1, t2, m, d, z;
  std::cin >> t1 >> t2 >> m;
  d = t2 - t1;
  if (d > 0) {
	z = m * d / t1;
	std::cout << "Zysk wynosi " << z << std::endl;
  } else {
	std::cout << "Niekorzysc " << std::endl;
  }

  return 0;
}
